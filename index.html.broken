    <script>
        // Navigation
        function switchView(viewId) {
            document.querySelectorAll('.view').forEach(view => {
                view.classList.remove('active');
            });
            
            document.getElementById(viewId).classList.add('active');
            
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        // Show tracking panel
        function showTracking() {
            document.getElementById('tracking-panel').scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        // Filter orders
        function filterOrders(filter) {
            const cards = document.querySelectorAll('.order-card');
            const buttons = document.querySelectorAll('.filter-btn');
            
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            cards.forEach(card => {
                if (filter === 'all') {
                    card.style.display = 'block';
                } else {
                    const status = card.getAttribute('data-status');
                    card.style.display = status === filter ? 'block' : 'none';
                }
            });
        }

        // Floor details with AI insights
        function showFloorDetails(floorNum) {
            // Remove selected class from all floors
            document.querySelectorAll('.floor').forEach(f => f.classList.remove('selected'));
            event.currentTarget.classList.add('selected');
            
            const detailPanel = document.getElementById('floor-details');
            detailPanel.classList.add('active');
            
            // Sample data with AI insights
            const floorData = {
                12: {
                    issues: ['Fuga de agua en tubería principal', 'Sensor de temperatura defectuoso', 'Iluminación intermitente'],
                    staff: ['Ana García (AG)', 'Carlos López (CL)'],
                    insight: 'Piso 12 tiene 3x más incidentes que el promedio del edificio'
                },
                25: {
                    issues: ['Sistema eléctrico con fluctuaciones', 'Aire acondicionado no enfría'],
                    staff: ['Carlos López (CL)', 'María Hernández (MH)'],
                    insight: 'Piso 25 tiene 2x más incidentes que el promedio del edificio'
                },
                28: {
                    issues: ['Filtro HVAC requiere limpieza'],
                    staff: ['Carlos López (CL)'],
                    insight: null
                }
            };
            
            const data = floorData[floorNum] || { issues: [], staff: [], insight: null };
            
            let html = `
                <div class="floor-detail-title">Piso ${floorNum}</div>
                <div class="floor-detail-stat">${data.issues.length} problema(s) activo(s)</div>
            `;

            if (data.insight) {
                html += `
                    <div class="floor-insight">
                        ${data.insight}
                    </div>
                `;
            }
            
            if (data.issues.length > 0) {
                html += `
                    <div class="floor-issues-list">
                        <strong style="font-size: 14px; color: #374151; display: block; margin-bottom: 8px;">Problemas:</strong>
                        ${data.issues.map(issue => `<div class="floor-issue-item">${issue}</div>`).join('')}
                    </div>
                `;
            }
            
            if (data.staff.length > 0) {
                html += `
                    <div class="floor-staff-list">
                        <strong style="font-size: 14px; color: #374151; display: block; margin-bottom: 8px;">Personal Asignado:</strong>
                        ${data.staff.map(s => `<div class="floor-staff-item">${s}</div>`).join('')}
                    </div>
                `;
            }

            detailPanel.innerHTML = html;
        }

        // ROI Calculator
        function calculateROI() {
            const orders = parseInt(document.getElementById('ordersSlider').value);
            const time = parseInt(document.getElementById('timeSlider').value);
            const cost = parseInt(document.getElementById('costSlider').value);
            const reduction = parseInt(document.getElementById('reductionSlider').value);
            
            document.getElementById('ordersValue').textContent = orders;
            document.getElementById('timeValue').textContent = time;
            document.getElementById('costValue').textContent = '$' + cost;
            document.getElementById('reductionValue').textContent = reduction + '%';
            
            const currentMonthlyCost = orders * time * cost;
            const timeSaved = time * (reduction / 100);
            const newMonthlyCost = orders * (time - timeSaved) * cost;
            const savings = currentMonthlyCost - newMonthlyCost;
            
            document.getElementById('savingsResult').textContent = '$' + Math.round(savings).toLocaleString();
        }

        // Initialize charts
        window.addEventListener('load', function() {
            // Status Chart
            const statusCtx = document.getElementById('statusChart');
            if (statusCtx) {
                new Chart(statusCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Completadas', 'En Progreso', 'Abiertas', 'Urgentes'],
                        datasets: [{
                            data: [45, 28, 18, 9],
                            backgroundColor: ['#10B981', '#3b82f6', '#f59e0b', '#ef4444'],
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 16,
                                    font: {
                                        family: 'Inter',
                                        size: 13
                                    }
                                }
                            }
                        }
                    }
                });
            }

            // Month Chart
            const monthCtx = document.getElementById('monthChart');
            if (monthCtx) {
                new Chart(monthCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun'],
                        datasets: [{
                            label: 'Órdenes',
                            data: [42, 38, 51, 45, 48, 53],
                            backgroundColor: '#4F46E5',
                            borderRadius: 6
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: '#f3f4f6'
                                },
                                ticks: {
                                    font: {
                                        family: 'Inter',
                                        size: 12
                                    }
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                },
                                ticks: {
                                    font: {
                                        family: 'Inter',
                                        size: 12
                                    }
                                }
                            }
                        }
                    }
                });
            }

            // Initialize ROI calculator
            calculateROI();
        });
    </script>
</body>
</html>
