        }

        .tracking-step {
            display: flex;
            align-items: start;
            gap: 16px;
            margin-bottom: 32px;
            position: relative;
        }

        .tracking-step:last-child {
            margin-bottom: 0;
        }

        .step-indicator {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            font-size: 14px;
            font-weight: 600;
            z-index: 2;
        }

        .step-indicator.completed {
            background: #10B981;
            color: #ffffff;
        }

        .step-indicator.active {
            background: #4F46E5;
            color: #ffffff;
            animation: pulse-dot 2s infinite;
        }

        .step-indicator.pending {
            background: #e5e7eb;
            color: #9ca3af;
        }

        @keyframes pulse-dot {
            0%, 100% { box-shadow: 0 0 0 0 rgba(79, 70, 229, 0.7); }
            50% { box-shadow: 0 0 0 8px rgba(79, 70, 229, 0); }
        }

        .step-line {
            position: absolute;
            left: 15px;
            top: 32px;
            width: 2px;
            height: calc(100% - 32px);
            background: #e5e7eb;
        }

        .tracking-step.completed .step-line {
