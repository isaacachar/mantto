        .waveform-bar {
            width: 4px;
            background: #128c7e;
            border-radius: 2px;
            animation: pulse 1s infinite ease-in-out;
        }

        .waveform-bar:nth-child(1) { height: 12px; animation-delay: 0s; }
        .waveform-bar:nth-child(2) { height: 24px; animation-delay: 0.1s; }
        .waveform-bar:nth-child(3) { height: 18px; animation-delay: 0.2s; }
        .waveform-bar:nth-child(4) { height: 30px; animation-delay: 0.3s; }
        .waveform-bar:nth-child(5) { height: 16px; animation-delay: 0.4s; }
        .waveform-bar:nth-child(6) { height: 22px; animation-delay: 0.5s; }
        .waveform-bar:nth-child(7) { height: 28px; animation-delay: 0.6s; }
        .waveform-bar:nth-child(8) { height: 14px; animation-delay: 0.7s; }

